<h1 class="page-title"><%= current_user.email %></h1>

<h2>My Surveys</h2>

<ul class="large-block-grid-5 user-survey-list">
  <% @surveys.each do |survey| %>
    <li><span class="survey-title"><%= survey.title %></span><br> 
    	<a class="button" href="/surveys/edit/<%= survey.id %>">Edit</a><br>
    	<a class="button alert" href="/surveys/delete/<%= survey.id %>">Delete</a>
    </li>
  <% end %>
</ul>
